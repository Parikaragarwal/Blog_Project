<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/account.css">
    <title>User Account</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <h1>Account Settings</h1>

        <!-- Profile Overview -->
        <div class="profile-overview">
            <img src="<%= user.profileImgURL %>" alt="Profile Picture" class="profile-img">
            <p><strong>Username:</strong> <%= user.fullname %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
        </div>

        <!-- Update Form -->
        <form action="/user/account" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PATCH">
            <div class="form-group">
                <label for="fullname">Update Username:</label>
                <input type="text" name="fullname" id="fullname" placeholder="Enter new username" class="form-control">
            </div>

            <div class="form-group">
                <label for="password">Update Password:</label>
                <input type="password" name="password" id="password" placeholder="Enter new password" class="form-control">
            </div>

            <div class="form-group">
                <label for="profileImg">Update Profile Picture:</label>
                <input type="file" name="profileImg" id="profileImg" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>

        <!-- Delete Account Section -->
        <div class="delete-account">
            <button class="btn btn-danger" id="delete-btn">Delete Account</button>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete your account? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <form action="/user/account/delete" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Yes, Delete My Account</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/account.js"></script>
</body>
</html>
